{
  "name": "opencode-multi-account-core",
  "version": "0.2.0",
  "description": "Shared core for multi-account OpenCode plugins",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outdir=dist --platform=node --format=esm --packages=external && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "test": "for f in tests/*.test.ts; do bun test \"$f\" || exit 1; done",
    "prepack": "bun run build",
    "dev": "bun run build --watch"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "sideEffects": false,
  "keywords": ["opencode", "plugin", "multi-account", "core", "shared"],
  "author": "yuka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/other-yuka/kyoli-gam.git",
    "directory": "packages/multi-account-core"
  },
  "dependencies": {
    "proper-lockfile": "^4.1.2",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^0.15.30",
    "@types/node": "^25.2.2",
    "@types/proper-lockfile": "^4.1.4",
    "typescript": "^5.8.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ]
}
